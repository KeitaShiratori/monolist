<% content_for :head do %>
  <title><%= @user.name %> のモノページ</title>
  <meta name="description" content="<%= @user.name %>のモノページ。<%= @user.name %>の欲しいモノ、持っているモノを表示しています。" />
<% end %>

<%= render 'profile' , user: @user %>

<% if @items.present? %>
  <%= render 'items/list' , items: @items %>
<% end %>